<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" tools:ignore="UselessParent">

        <TextView
                android:id="@+id/passphrase_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:drawableLeft="@drawable/ic_question_black_24dp"
                android:drawablePadding="10dp"
                android:text="@string/question_ignore_text"/>


        <TextView
                android:id="@+id/orig_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="italic"
                android:paddingTop="10dp"
                android:paddingLeft="34dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="6dp"
                android:text="@string/loremlong"/>

    </LinearLayout>


</FrameLayout>